*
	margin: 0
	padding: 0

body 
	background light-grey
 	padding: 70px 0 150px
  	font-family: 'Open Sans'
	box-sizing: border-box

li 
	list-style: none

a
	text-decoration: none

.rub
	background: url('./images/rub.png') no-repeat 15% 50%
	background-size: 18px 18px 	
	display: inline-block
	height: 18px
	width: 20px
	position: relative

.close
	background: url('./images/close.png') no-repeat 15% 50%
	background-size: 18px 18px 	
	display: inline-block
	height: 18px
	width: 20px
	position: relative	

.remove
	background: url('./images/remove.png') no-repeat 15% 50%
	background-size: 18px 18px 	
	display: inline-block
	height: 18px
	width: 20px
	position: relative	

.container
	margin: 0 auto
	min-width: 280px
	padding: 20px
	width: 90%

.sort 
	background-color: white
	box-shadow: 0px 4px 16px -7px rgba(0,0,0,0.57)
	border-radius: 5px
	margin-bottom: 15px
	padding: 10px
	&__title 
		margin-right: 15px
	&__options
		border-radius: 5px
		border-color: #d9d9d9
		padding: 5px

.list
	display: flex
	flex-wrap: wrap
	justify-content: space-between
	color: #333
	&__item
		background-color: white
		cursor: pointer
		margin-bottom: 20px
		padding: 10px
		min-width: 230px
		width: 30%
		text-align: center
		transition: .2s
		&:hover
			box-shadow: 0px 0px 25px 5px rgba(0,0,0,0.2);
		@media (max-width: 840px)
			width: 45%
		@media (max-width: 585px)
			width: 100%
	img 
		margin-bottom: 20px
		height: auto
		width: 200px
	h4
		margin-bottom: 20px
	p 
		font-weight: 700
		font-size: 24px		

.info-popup
	display: none
	&--open
		background-color: rgba(0,0,0, .5)
		display: flex
		height: 100%
		width: 100%
		position: fixed
		top: 0
		left: 0
		z-index: 2
			
.info
	background-color: white
	cursor: default
	display: flex
	margin: auto
	padding: 20px
	min-width: 400px
	width: 60%
	position: relative
	@media (max-width: 1000px)
		flex-direction: column
	&__image
		height: auto
		width: 80%
	&__name
		font-size: 20px
	&__desc
		color: #333
		font-size: 14px 
		margin: 25px 0
		text-align: justify;
	&__price
		margin-right: 25px
	&__price
		font-weight: 600
		font-size: 24px
		input
			border: none
			color: #696969
			font-weight: 700
			font-size: 18px
			width: 32px
	&__sizes 
		border: none 
		margin-bottom: 20px
		margin-top: 15px
	&__size 
		color: #333
		input[type='radio']
			display: none
		input:checked + span
			background-color: #EC971F
			color: white
		span 
			cursor: pointer
			border: 1px solid #EC971F
			margin-right: 5px
			display: inline-block
			font-weight: 700
			padding: 10px
			transition: .3s
			&:hover
				background-color: #EC971F
	.btn-buy
		background-color: #EC971F
		border: none
		color: #fff
		font-size: 14px
		font-weight: bold
		cursor: pointer
		display: block 
		height: 40px
		line-height: 40px
		margin-top: 20px
		width: 150px
		text-align: center
		text-transform: uppercase
		float: right
		margin-top: -10px
		transition: .3s
		&:hover
			background-color: #9FD363
	.popup-hide
		position: absolute
		top: 10px
		right: 10px
	.col3
		width: 66%
		@media (max-width: 1000px)
			width: 100%
			&:nth-of-type(1) 
				margin-bottom: 20px
		&:nth-of-type(1) 
			text-align: center
	
	.col2
		width: 33%
		@media (max-width: 1000px)
			width: 100%			 
			margin-bottom: 20px 
			text-align: left		

.navbar
	background-color: #f7f7f7
	border-radius: 5px
	box-shadow: 0px 4px 16px -7px rgba(0,0,0,0.57);
	display: flex
	justify-content: flex-end
	margin-bottom: 30px	
	padding: 10px
	position: relative
	.btn-cart
		background: url('./images/cart.png') no-repeat 15% 50%
		background-size: 40px 40px 
		background-color: #ebebeb
		border-radius: 5px
		border: 1px solid #e6e6e6
		display: block
		height: 50px
		width: 70px
		position: relative
		&:hover 
			background-color: #e6e6e6
		.cart-items
			background-color: #dd2222
			border-radius: 50%
			color: white
			display: block
			font-size: 13px
			font-weight: 600
			padding: 2px 5px
			position: absolute
			bottom: 5px
			right: 5px

.cart-popup
	display: none
	&--show
		background-color: rgba(0,0,0, .5)
		display: flex
		height: 100%
		width: 100%
		padding: 10px
		position: fixed
		top: 0
		left: 0

.cart 
	background-color: #EC971F
	display: flex
	flex-direction: column
	color: #333
	width: 50%
	margin: auto
	padding: 10px 20px 0
	position: relative
	.sct
		padding-bottom: 20px
	.total-price
		font-weight: 700
		padding: 15px
		text-align: right
	.cart-close
		color: rgb(177, 14, 0)
		position: absolute
		top: 5px
		right: 5px
.cart-list
	&__item
		background-color: #fff
		border-bottom: 1px solid #D58512
		display: flex
		padding: 10px
		color: #333
		position: relative
		.col:nth-of-type(1)
			margin-right: 20px 
		.item-image
			width: 60px
		.item-name
			margin-bottom: 10px
		span 
			font-size: 14px
			margin-right: 10px
			font-weight: 700
		.item-remove
			position: absolute
			top: 10px
			right: 0px
