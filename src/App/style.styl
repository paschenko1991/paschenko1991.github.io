z = {
    neg: -7,
    lowest: 1,
    low: 4,
    mid: 5,
    video: 6,
    header: 7,
    nav: 8,
    mini: 9,
    modal: 10,
    highest: 11
}

header
	color: #FFF
	background: dark-grey
	padding: 10px 5%
	position: fixed
	width: 90%
	height: 80px
	z-index: 1
	box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
	clearfix()
	h2
		margin-top: 20px
		font-weight: 100
		font-size: 1.6em
		float: left
  	nav
    	float: right
    a
		color: #FFF
		text-decoration: none
		line-height: 36px
		font-size: 1.2em
		display: inline-block
		border-bottom: 4px solid transparent
		trans()	

.cartbutton
	float: right
	.btn-cart
		background: url('./images/cart.png') no-repeat 15% 50%
		background-size: 60px 60px 
		display: block
		height: 60px
		width: 70px
		position: relative
		transition: .3s
		&:hover 
			background-color: #EC971F
		.cart-items
			background-color: #EC971F
			color: #333
			display: block
			font-size: 13px
			font-weight: 600
			padding: 2px 5px
			position: absolute
			bottom: -19px
			right: 6px

main
	background-color: #eee
	padding-top: 120px
	padding-right: 5%
	padding-left: 5%
  				

footer
	color: #FFF
	background: dark-grey
	padding: 20px 5%
	fixed: bottom left
	z-index: z.header
	clearfix()
	p
		color: #FFF
		text-align: right			